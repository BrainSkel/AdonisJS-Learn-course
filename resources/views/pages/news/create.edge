      <input type="text" id="title" name="title"  />
        @if(flashMessages.has('inputErrorsBag.title'))
            <p>{{ flashMessages.get('inputErrorsBag.title') }}</p>
        @end
      <br />

        <label for="content">Content:</label>
        <textarea id="content" name="content"  placeholder="Article Content"></textarea>
        @if(flashMessages.has('inputErrorsBag.content'))
            <p>{{ flashMessages.get('inputErrorsBag.content') }}</p>
        @end
      <br />

        
        <label for="image">Image:<input type="file" name="image" accept="image/*" /></label>
